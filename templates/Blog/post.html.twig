{% extends 'base.html.twig' %}

{% block title %} {{ post.title }} {% endblock %}
{% block body %}
    <p> ID {{ id }} </p>
    <h3> {{ post.title }} </h3>
    <p> {{ post.text }} </p>
    <p>{{ post.date|date('H:i:s') }}</p>
    <p>{{ 560|price }}</p>
    <p>Current Locale is {{ locale }}</p>
    <p>{{ message }}</p>
    <p>Env: {{ app.environment }}</p>
    <p>Request: {{ app.request }}</p>
    {#<p>Session started: {{ app.sesion.isStarted() }}</p>#}
    <p>Debug: {{ app.debug }}</p>
{% endblock %}